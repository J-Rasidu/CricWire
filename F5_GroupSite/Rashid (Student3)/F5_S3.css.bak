					/* < ----- Student Detail Styling -----> */	

body.STDBody {
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    background-image:url("../F5_Images/BG7.jpg");
	background-size:cover;
	background-repeat:no-repeat;
    margin: 0;
    padding: 0;

}

.heading{
    text-align: center;
    font-size: large;
    color: white;
    margin-top: 30px;
    background-image:url("../F5_Images/BG7.jpg");
    padding: 10px;
}



.content{
    width:1200px;
    min-height:300px;
    background-image:url("../F5_Images/BG7.jpg");
    margin:100px auto 0;
    display: flex;
}

.content .box{
    position: relative;
    width: 340px;
    height:300px;
    background: rgb(255, 255, 255);
    margin: 25px ;
    box-sizing: border-box;
   /* display: inline-block;  */

}

.content .box .imgbox{
    position: relative;
   overflow: hidden; 
}
.content .box .imgbox img{
    width: 250px;
    height: 300px;
    transition: transform 2s;
}  
.content .box:hover .imgbox img{
    transform: scale(1.1);

}
.content .box .text{
    position: absolute;
    width: 220px;
    height: 280px;
    left: 10px;
    right: 10px;
    bottom: 10px;
    top: 10px;
    background-image:url("../F5_Images/BG7.jpg");
    transform:scaleY(0);
    transition: transform  2s;
}

.content .box:hover .text{
    transform: scaleY(1);

}
.content .box .text .info{
    position: absolute;
    top: 100px;
    font-weight: bold;
    color:rgb(192, 221, 24);
    text-align: center;
    
}

.content .box .text .info h2 {
    color: white;
    margin-left: 20px;
    font-size: 20px;
    text-align: center;
}
.content .box .text .info p{
    color: aliceblue;
    margin-left:40px;
}

